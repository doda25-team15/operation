Vagrant.configure("2") do |config|

  IMAGE_NAME = "bento/ubuntu-24.04"
  WORKER_COUNT = ENV.fetch("WORKER_COUNT", 2).to_i

  

  config.ssh.insert_key = false

  # controller
  config.vm.define "ctrl" do |ctrl|
    ctrl.vm.box = IMAGE_NAME
    ctrl.vm.hostname = "ctrl"
    ctrl.vm.network "private_network", ip: "192.168.56.100"

    ctrl.vm.provider "virtualbox" do |vb|
      vb.name = "ctrl"
      vb.cpus = 1
      vb.memory = 4096
    end
  end


  #workers
  (1..WORKER_COUNT).each do |i|
    config.vm.define "node-#{i}" do |node|
      node.vm.box = IMAGE_NAME
      node.vm.hostname = "node-#{i}"
      node.vm.network "private_network", ip: "192.168.56.#{100 + i}"

      node.vm.provider "virtualbox" do |vb|
        vb.name = "node-#{i}"
        vb.cpus = 2
        vb.memory = 6144
      end
    end
  end

  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "general.yaml"
    ansible.limit = "all"
  end

  config.vm.provision "ansible", run: "always" do |ansible|
    ansible.playbook = "ctrl.yaml"
    ansible.limit = "ctrl"
  end

  config.vm.provision "ansible", run: "always" do |ansible|
    ansible.playbook = "node.yaml"
    ansible.limit = "all"  #filtered in node.yaml
  end

end
